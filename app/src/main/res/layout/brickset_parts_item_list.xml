<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_Item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTintMode="screen">

            <ImageView
                android:id="@+id/item_img"
                android:layout_width="70dp"
                android:layout_height="120dp"
                android:contentDescription="Brick image"
                android:scaleType="centerCrop"
                android:src="@drawable/brick_placeholder"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/brickset_part_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="4dp"
                android:text="Plate Special 1 x 1 Rounded with Handle"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/item_img"
                app:layout_constraintTop_toTopOf="@id/item_img" />

            <TextView
                android:id="@+id/brickset_part_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="#26047"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/brickset_part_title"
                app:layout_constraintTop_toBottomOf="@+id/brickset_part_title" />


            <TextView
                android:id="@+id/brickset_part_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="176dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="5dp"
                android:text="-1/-1"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/brickset_part_id"
                app:layout_constraintTop_toBottomOf="@+id/brickset_part_title"
                app:layout_constraintVertical_bias="0.576" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>