<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Brickr" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorPrimaryVariant">@color/primary_yellow_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. (Used on FAB). -->
        <item name="colorSecondary">@color/secondary_orange</item>
        <item name="colorSecondaryVariant">@color/secondary_orange_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Brickr.Small" parent="Theme.Brickr">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="Theme.Brickr.Medium" parent="Theme.Brickr">
        <item name="android:textSize">26sp</item>
    </style>
    <style name="Theme.Brickr.Large" parent="Theme.Brickr">
        <item name="android:textSize">30sp</item>
    </style>

</resources>